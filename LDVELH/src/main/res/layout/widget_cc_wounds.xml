<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        style="@style/ldvelhTitles"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/small_margin"
        android:layout_weight="1"
        android:background="#009900"
        android:gravity="center"
        android:text="@string/cc_unscathed"
        android:textSize="@dimen/small_button_text" />

    <TextView
        style="@style/ldvelhTitles"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/small_margin"
        android:layout_weight="1"
        android:background="#cccc00"
        android:gravity="center"
        android:text="@string/cc_wounded"
        android:textSize="@dimen/small_button_text" />

    <TextView
        style="@style/ldvelhTitles"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/small_margin"
        android:layout_weight="1"
        android:background="#cc3300"
        android:gravity="center"
        android:text="@string/cc_badly_wounded"
        android:textSize="@dimen/small_button_text" />

    <TextView
        style="@style/ldvelhTitles"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/small_margin"
        android:layout_weight="1"
        android:background="#333333"
        android:gravity="center"
        android:text="@string/cc_dead"
        android:textColor="@android:color/white"
        android:textSize="@dimen/small_button_text" />
</LinearLayout>