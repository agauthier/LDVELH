<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/pencil_border"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            style="@style/ldvelhTitles"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="@string/your_team" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/divider_brown_opaque"
            android:orientation="horizontal" />

        <TextView
            style="@style/ldvelhLargeTitles"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="@dimen/default_padding"
            android:text="@string/enemies" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/addMonsterButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/small_button_selector"
                android:contentDescription="@string/lorem_ipsum"
                android:src="@drawable/btn_plus_medium" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/divider_brown_opaque"
        android:orientation="horizontal" />

    <com.home.ldvelh.ui.widget.list.CombatRowList
        android:id="@+id/combatList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        custom:listPropertyName="FIGHTER_GRID"
        custom:newConsumableItemVisible="false"
        custom:newItemVisible="false"
        custom:rowLayout="list_item_combat_row" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/phaserButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_padding"
            android:background="@drawable/small_button_selector"
            android:contentDescription="@string/lorem_ipsum"
            android:src="@drawable/phaser_none" />

        <ImageButton
            android:id="@+id/upButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_padding"
            android:layout_weight="1"
            android:background="@drawable/small_button_selector"
            android:contentDescription="@string/lorem_ipsum"
            android:src="@drawable/up_arrow_large" />

        <ImageButton
            android:id="@+id/downButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_padding"
            android:layout_weight="1"
            android:background="@drawable/small_button_selector"
            android:contentDescription="@string/lorem_ipsum"
            android:src="@drawable/down_arrow_large" />

        <ImageButton
            android:id="@+id/reset"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_padding"
            android:layout_weight="1"
            android:background="@drawable/small_button_selector"
            android:contentDescription="@string/lorem_ipsum"
            android:src="@drawable/reset_large" />

        <ImageButton
            android:id="@+id/assault"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_padding"
            android:layout_weight="1"
            android:background="@drawable/small_button_selector"
            android:contentDescription="@string/lorem_ipsum"
            android:src="@drawable/assault_large" />

        <ImageButton
            android:id="@+id/leavePlanet"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_padding"
            android:layout_weight="1"
            android:background="@drawable/small_button_selector"
            android:contentDescription="@string/lorem_ipsum"
            android:src="@drawable/leave_planet" />
    </LinearLayout>

</LinearLayout>